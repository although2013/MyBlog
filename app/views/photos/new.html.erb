<div class="center pad">
<h1>上传照片</h1>
<%= render "layouts/flash" %>
  <div class="my_form">

    <%= form_for @photo, :html => {:multipart => true} do |f| %>
      <%= f.file_field :picture %><br>
    
      <%= f.label :name, '图片简介' %>:
      <%= f.text_field :name, :class => "form-control" %><br>

      <%= f.submit "上 传", class: "btn btn-large btn-primary"%>
    <% end %>
  </div>
</div>