<div class="panel panel-default micropost">
  <div class="panel-body">
    <%= micropost.content %>
  </div>
  <div class="panel-footer">
    <ul>
      <% if admin? %>
        <li>
          <%= link_to "修改", edit_micropost_path(micropost) %>
        </li>
      <% end %>
      <li>
        <%= link_to "评论 #{micropost.comments.count}", micropost_path(micropost) %>
      </li>
      <li>
        <%= time_ago_in_words(micropost.created_at) %>
      </li>
    </ul>
  </div>
  <% if !micropost.comments.blank? %>
    <div class="comments_index">
      <% comment = micropost.comments.first %>
      <p class="comment_newest"> <%= link_to comment.user.name, comment.user %>&nbsp; <%= comment.content %> </p>
    </div>
  <% end %>
</div>