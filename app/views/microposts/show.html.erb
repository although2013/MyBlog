
<div class="pad">
<%= render 'layouts/flash' %>
  <div class="micropost_content">
    <%= @micropost.content %>
  </div>
</div>
<div class="pad">
    <% @comments.each do |comment| %>
      <div class="comment_card">
        <%= image_tag comment.user.avatar_url(:small).to_s, class:"avatar" %>
        <div class="text">
          <%=link_to "@#{comment.user.name}  ", comment.user %> &nbsp;<%= comment.content %>
        </div>
      </div>
      <div class="divider"></div>
    <% end %>
  </div>
</div>
<div class="pad">
  <%= render 'comments/form' %>
</div>