<div class="row">
  <div class="micropost_form">
    <%= form_for(@micropost, class:"form-horizontal")  do |f|%>
      <div class="form-group">
        <%= f.label :content, "微博内容" %><br>
        <%= f.text_area :content, :class => "form-control"%><br>

        <%= f.label :content, "tag" %>
        <%= f.text_field :tag, class:'form-control input_short' %><br>
      </div>

      <div class="actions">
        <%= f.submit "发 送", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
