<li class="dropdown">
  <% unread_num = current_user.notifications.unread.count %>

  <a class="dropdown-toggle" href="#" data-toggle="dropdown" data-no-turbolink="true">
    管理员
      <% if unread_num > 0 %>
        <span class="badge"><%= unread_num %></span>
      <% end %>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to current_user.name, user_path(current_user) %></li>
    <li><%= link_to "设置", edit_user_path(current_user) %></li>
    <li><%= link_to "新微博", new_micropost_path %></li>
    <li><%= link_to "新照片", new_photo_path %></li>
    <li class="divider"></li>

    <li>
      <%= link_to notifications_url do %>
        通知&nbsp;&nbsp;&nbsp;
        <% if unread_num > 0 %>
          <span class="badge pull-rught">&nbsp;<%= unread_num %>&nbsp;</span>
        <% end %>
      <% end %>
    </li>

    <li class="divider"></li>
    <li><%= link_to "退出登录", signout_path, method: "delete" %></li>
  </ul>
</li>